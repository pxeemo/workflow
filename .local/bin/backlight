#!/bin/sh

FILE=$(ls /sys/class/leds/input*::scrolllock/brightness)
VALUE=$(cat $FILE)
 
echo $((!$VALUE)) > $FILE

## add policy file at /usr/share/polkit-1/actions/org.fedora.pkexec.kbback.policy with
#
#
# <?xml version="1.0" encoding="UTF-8"?>
# <!DOCTYPE policyconfig PUBLIC
#  "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
#  "http://www.freedesktop.org/standards/PolicyKit/1/policyconfig.dtd">
# <policyconfig>
#
#   <icon_name>input-keyboard</icon_name>
#   <action id="org.fedora.pkexec.kbback">
#     <message>Authentication is required to Change Keyboard Backlight</message>
#     <defaults>
#       <allow_any>no</allow_any>
#       <allow_inactive>no</allow_inactive>
#       <allow_active>yes</allow_active>
#     </defaults>
#     <annotate key="org.freedesktop.policykit.exec.path">/home/pxeemo/.local/bin/backlight</annotate>
#   </action>
#
# </policyconfig>
#
#
## then run through pkexec
